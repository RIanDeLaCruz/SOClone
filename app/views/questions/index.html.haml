%h1 Questions
=link_to "Ask Question", controller: "questions", action: "new"
%ul.questions_indexList
- @questions.each do |question|
  %li.questions_listItem
    =link_to question_path(question), :class => 'question_title' do
      %p
        = truncate(question.title, length: 100)
    %p.question_content=  question.content
    .question_actions
      - if logged_in? && session[:user_id] == question.user_id
        = link_to edit_question_path(question), :class => 'action_link'  do
          %i{:class => "fa fa-edit"}
        = link_to question_path(question), method: :delete, data:{confirm: "This cannot be undone"}, :class => 'action_link' do
          %i{:class => "fa fa-trash"}  
      - else
        %div{:class => "action_link disabled"}
          %i{:class => "fa fa-edit"}
        %div{:class => "action_link disabled"}
          %i{:class => "fa fa-trash"}
  
